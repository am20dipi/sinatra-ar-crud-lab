    <input type="hidden" name="_method" value="patch">
    <br>
    <br>
    <label for="title">Title</label>
    <input type="text" id="title" name="article[title]" value="<%= @article.title %>">
    <br>
    <br>
    <label for="content">Content</label>
    <input type="textbox" id="content" name="article[content" value="<%= @article.content %>">
    <br>
    <br>
    <input type="submit">
</form> 